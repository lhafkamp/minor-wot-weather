{
  "name": "wot",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "browserify public/js/index.js > public/build/index.bundle.js",
    "watch": "watchify public/js/index.js -o public/build/index.bundle.js -v",
    "expose": "ngrok http 2500"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "path": "^0.12.7",
    "request": "^2.81.0",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3"
  },
  "devDependencies": {
    "browserify": "^14.3.0",
    "ngrok": "^2.2.6",
    "watchify": "^3.9.0",
    "xo": "^0.18.1"
  },
  "xo": {
    "semicolon": false,
    "space": true,
    "env": [
      "node",
      "browser"
    ],
    "rules": {
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        }
      ]
    }
  }
}
